

<div class="row">
  <div class="col-sm-8"><h1>Users List</h1></div>
  <div class="col-sm-4"><a class="btn btn-outline-success my-2 my-sm-0" style="float: right;" href="/movies/new">Add Movie</a></div>
</div>



<table class="table table-striped">
  <thead>
  <tr>
    <th>User name</th>
    <th># favorited movies</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% User.where(user_role: 'user').each do |user| %>
    <tr>
      <td>
       <a href="/users/<%= user.user_name %>/show"><%= user.user_name %></a>
      </td>
      <td>
        <%= user.favorite_movies.count %>
      </td>
      <td>
        <a href="/destroy_user?user_id=<%= user.id %>">
          Destroy
        </a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>





