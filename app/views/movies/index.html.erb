

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-8"><h1>Movies List</h1></div>
  <div class="col-sm-4"><a class="btn btn-outline-success my-2 my-sm-0" style="float: right;" href="/movies/new">Add Movie</a></div>
</div>



<table class="table table-striped">
  <thead>
    <tr>
      <th>
      </th>
      <th>Name</th>
      <th>Year</th>
      <th>Favourited by users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <img src="<%= movie.thumbnail.url(:thumb) %>" height="30" style="border-radius: 2px;">
        </td>
        <td><a href="/movies/<%= movie.id %>" class="dont_show_colors"><%= movie.name %></a></td>
        <td><%= movie.year %></td>
        <td><%= movie.favorited_by_users %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: "Are you sure, you want to delete #{movie.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>





